    <script>
        window.onload = function () {
            // binding button 1
            var btn1 = document.getElementById("btn1");
            // create onlick event for button 1
            btn1.onclick = function () {
                document.getElementById('h2').style.color = "darkred";
                document.getElementById('h2').innerHTML = "Our Mission";
                document.getElementById('p1').style.color = "black";
                document.getElementById('p1').style.fontSize = "20px";
                document.getElementById('p1').style.marginTop = "20px";
