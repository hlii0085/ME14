<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="https://i.loli.net/2020/09/03/uAaWorV3MI4OdbT.png" type="image/x-icon">
    <title>@ViewBag.Title - Team Cookie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #chatBotTitle {
            width: 100px;
            height: 100px;
            margin-left: 300px;
            margin-right: 30px;
            margin-bottom: 150px;
            display: block;
            border-radius: 50%;
            outline:none;
            border:none;
            background:white;
        }


        #jiexianyuan{
            width:100px;
            height:100px;
        }

        #jiexianyuan:hover{
            box-shadow: black 0px 0px 5px;
        }

        #google_translate_element {
            float: right;
        }

        #chatbot {
            position: fixed;
            bottom: 0;
            right: 0;
            z-index: 100;
        }

        #chat {
            width: 400px;
            height: 500px;
            margin: 6px;
        }

        p{
            text-align: center;
        }

        #logo{
            position: absolute;
            height:100px;
            width:100px;
            left:150px;
            top:0;
        }

        #tiao{
            background-color:white;
            border:none;
        }
    </style>

</head>

<!--This file controls the whole layout-->
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" id="tiao">
        <!--Add project logo on the top of home page-->
        <img src="https://i.loli.net/2020/09/03/uAaWorV3MI4OdbT.png" id="logo" height="50" width="50" />
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Happy Thoughts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <!--These are elements of navigation-->
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Not Alone", "About", "Home")</li>
                    <li>@Html.ActionLink("Know You Better", "Contact", "Home")</li>
                </ul>
                <div id="google_translate_element"></div>
            </div>
        </div>
    </div>
    <div id="chatbot">
        <iframe id="chat" style="visibility:hidden" src='https://webchat.botframework.com/embed/cald-bot?s=u786YXznv4U.aiMr8yOFirfdhr-hWSNZvNq77x6FXot7SxezJygww_w'></iframe>
        <button id="chatBotTitle">
            <h4 style="color:#6495ED; font-weight:bold">CALDBOT</h4>
            <img id="jiexianyuan" src="~/Resources/jiexianyuan.PNG" />
            <h5 style="color:#6495ED; font-weight:bold">Type something after clicking the icon</h5>
        </button>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team Cookie</p>
        </footer>
    </div>
    <!--refer jquery and bootstrap-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit">
        //javescript for translate function
    </script>
    <script type="text/javascript">
        //javescript for translate function
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'en' }, 'google_translate_element');
        }
    </script>

    
    <script type="text/javascript">
        var btnC = document.getElementById('chatBotTitle');
        var dk = false;
        btnC.onclick = function () {
            if (dk) {
                document.getElementById('chat').style.visibility = "hidden";
                dk = false;
            } else {
                document.getElementById('chat').style.visibility = "visible";
                dk = true;
            }
        }
    </script>


</body>
</html>
